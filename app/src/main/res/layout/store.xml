<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffe4acc4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30mm"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="The name of file: "/>
        <EditText
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:hint="Enter the file's name"
            android:id="@+id/text_store"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5mm">
        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save"
            android:background="#ffa82d79"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginRight="5mm"/>
        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/back_in_store"
            android:background="#ffa82d79"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="5mm"/>
        </LinearLayout>


</LinearLayout>
